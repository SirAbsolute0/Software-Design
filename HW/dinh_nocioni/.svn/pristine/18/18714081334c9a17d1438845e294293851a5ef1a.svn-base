import requests
import re
import random as rnd


def getResponse():
    URL = "https://agilec.cs.uh.edu/words"

    return requests.get(URL).text

def parse(response):
    list_without_punctuation = re.sub(r'[^\w\s]', '', response).split()
    wordList = [i for i in list_without_punctuation if is_valid_word(i)]
    
    if len(wordList) == 1:
        raise ValueError("Not a word list")
    
    return wordList

def is_valid_word(word):
    return len(word) == 5 and word.isupper()

def get_a_random_word_given_a_seed(seed, wordList):
    rnd.seed = seed

    return rnd.choice(wordList)

def get_a_random_word():
    response = getResponse()
    wordList = parse(response)
    
    return get_a_random_word_given_a_seed(rnd.randint(0, 10000), wordList)


    
    


