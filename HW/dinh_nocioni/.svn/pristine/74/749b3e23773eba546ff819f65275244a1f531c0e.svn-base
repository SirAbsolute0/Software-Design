import unittest
from src.wordPicker import getResponse, parse

class WordPickerTests(unittest.TestCase):

  def test_getResponse(self):
    self.assertTrue(len(getResponse()) > 0)

  def test_parse(self):
    expected, words = [['FAVOR', 'RAPID', 'AGILE'], 'FAVOR, RAPID, AGILE']
    #Feedback: words should be '[FAVOR, RAPID, AGILE]'

    self.assertEqual(expected, parse(words))

  def test_parse_empty(self):

    self.assertEqual([], parse('')) #Feedback: parse('[]')

  def test_parse_exception(self):

    with self.assertRaises(ValueError):
      parse("Not A Word List") #Feedback: parse('FAVOR')
    
     
if __name__ == '__main__': 
  unittest.main()
