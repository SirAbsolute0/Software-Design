import unittest

from src.wordle import Wordle

class WordleTests(unittest.TestCase):
  def test_canary(self):
    self.assertTrue(True)

  def test_submitRow(self):
    #0 = Not in target
    #1 = Wrong position
    #2 = Correct position
    self.assertTrue(all([
      self.assertEqual([2, 2, 2, 2, 2], Wordle().tally("FAVOR", "FAVOR")),
      self.assertEqual([0, 0, 0, 0, 0], Wordle().tally("FAVOR", "TESTS")),
      self.assertEqual([1, 2, 0, 0, 0], Wordle().tally("FAVOR", "RAPID")),
      self.assertEqual([0, 2, 0, 2, 2], Wordle().tally("FAVOR", "MAYOR"))]))
    

    
    

#Feedback: we should not put multiple independent asserts into one test like this.
#instead, please use the facility of parameterized tests

if __name__ == '__main__': 
  unittest.main()
